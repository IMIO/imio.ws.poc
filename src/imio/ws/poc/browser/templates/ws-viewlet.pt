<script type="text/javascript">
  jQuery(function($) {

    $('#ws-request').click(function() {
      obj = $(this).parent();

      $.ajax({
        url: $(this).attr('href'),
        success: function(data) {
          console.log(data);
          if(data.error != null || data.success == false) {
            set_error(obj);
          } else {
            obj.html('in progress...');
            setTimeout(check_result, 1000, obj, data.id);
          }
        },
        error: function(data) {
          set_error(obj);
        }
      });
      return false;
    });

    set_error = function(obj) {
      obj.html('An error occured during the process');
    }

    check_result = function(obj, id) {
      $.ajax({
        url: 'ws_response?id=' + id,
        success: function(data) {
          if(data.success == false && data.error == null) {
            setTimeout(check_result, 2000, obj, id);
          } else if(data.success == true) {
            obj.html('Object created !');
          } else {
            set_error(obj);
          }
        },
        error: function(data) {
          set_error(obj);
        }
      });
    }

  });
</script>


<div tal:condition="not: view/published">
  <a href="#" tal:attributes="href string: ${view/url}/ws_request" id="ws-request">Publish on external website</a>
</div>

<fieldset tal:condition="view/published">
  <p>This document was published on an external website</p>
</fieldset>
